<div class="container">
  <div class="mt-2">
    <h1>New game</h1>
  </div>


  <div class="d-flex">
    <% @letters.each do |letter| %>
    <ul><%= letter %></ul>
    <% end %>
  </div>

  <div class="mt-3 col-4">
    <label for="word">What is the longest word you can find?</label>
      <form action="/score" method="post" data-turbo="false">
        <div class="input-group mt-3">
          <%= hidden_field_tag :letters, @letters %>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <input type="text" class="form-control" name="word" id="">
          <input class="input-group-text col-4" type="submit" value="Play">
        </div>
      </form>
  </div>
</div>
